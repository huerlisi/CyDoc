  # RDoc
  gem 'rdoc'

  # Deployment
  gem 'capones_recipes'
end

# Test
# ====
group :test, :development do
  # Console
  gem 'pry-rails'
  gem 'pry-doc'
  gem 'pry-debugger'
end

