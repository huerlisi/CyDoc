<h3>Neue Rechnung</h3>
<%= error_messages_for :invoice %>

<div class="box">
  <% form_for [:patient, :treatment, @invoice], :builder => Rubaidh::TabularForm::TabularFormBuilder do |invoice| %>
    <table>
      <%= invoice.text_field :date, :label => 'Fälligkeitsdatum', :size => 12 %>
      <tr>
        <td><label for="tiers[name]">Vergütungsart:</label></td>
        <td><%= select 'tiers', :name, [['Tiers Garant', TiersGarant], ['Tiers Payant', TiersPayant]] %></td>
      </tr>
      <%= invoice.text_area :remark, :rows => 2, :label =>  'Bemerkungen' %>
      <%= invoice.submit "Erstellen" %>
    </table>
  <% end %>
</div>

<%= render :partial => 'treatments/show' %>
